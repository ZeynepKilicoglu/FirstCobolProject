-- FOURNISSEURS(id_fournisseur, nom, adresse)
----------------------------------
    CREATE TABLE fournisseurs(
	      id_fournisseur INT          not null PRIMARY KEY   ,
       nom            VARCHAR(255) NOT NULL,
       pays           VARCHAR(255) NOT NULL
    )
    in database  zerdb
    ;
----------------------------------
